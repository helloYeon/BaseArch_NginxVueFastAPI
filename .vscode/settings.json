{
  // --------------------------------
  // global
  // --------------------------------
  // ファイル保存時、末尾の空白をトリミングする
  "files.trimTrailingWhitespace": true,
  // ファイル保存時、最終行に改行を挿入する
  "files.insertFinalNewline": true,
  // ファイル保存時、最終行以降の空行を削除する
  "files.trimFinalNewlines": true,
  // 文字エンコーディングを指定
  "files.encoding": "utf8",
  // 改行コード
  "files.eol": "\n",
  // 空白文字表示有効 boundary / none / all
  "editor.renderWhitespace": "all",
  // デフォルトのフォーマッターを設定する
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // ファイル保存時、コードを整形する
  "editor.formatOnSave": true,
  // ファイル保存時、同時に行われるアクション
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  // ルーラー
  "editor.rulers": [120],
  // ミニマップの表示
  "editor.minimap.enabled": false,
  // 検索結果から特定ファイル・フォルダを除外
  "search.exclude": {
    ".mypy_cache/*": true,
    ".venv/*": true,
    "**/site-packages/*": true,
    "**/dist/*": true
  },
  // ファイルエクスプローラーから不要ファイルを非表示
  "files.exclude": {
    "**/site-packages/*": true
  },
  // --------------------------------
  // python
  // --------------------------------
  // python
  "[python]": {
    // python.ファイル保存時、コードを整形する
    "editor.formatOnSave": true,
    // python.デフォルトのフォーマッターを設定する
    "editor.defaultFormatter": "ms-python.black-formatter",
    // python.ファイル保存時、コードを整形する
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  // python.ruff インストールした場合は下記を項目指定
  // "ruff.path": ["${workspaceFolder}/backend/src/site-packages/bin/ruff"],
  // python.pylance.analysisパス
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend/src/site-packages",
    "${workspaceFolder}/backend-stub/src/site-packages"
  ],
  // python.ENVファイル
  "python.envFile": "${workspaceFolder}/.env",
  // python.ルートフォルダ
  "python.autoComplete.extraPaths": ["${workspaceFolder}/backend/src"],
  // python.pylance 型チェック: off / basic / strict
  "python.analysis.typeCheckingMode": "basic",
  // python.pylance リーターンタイプチェック
  "python.analysis.inlayHints.functionReturnTypes": true,
  // python.pylance 型チェック
  "python.defaultInterpreterPath": ".venv/bin/python",
  // python.todo
  "python.analysis.enablePytestExtra": true,
  // python.mypy-type-checker引数 --disallow-untyped-defs
  "mypy-type-checker.args": [""],
  // python.mypy-type-checker bundleを使う：useBundled / 環境インストールされたのを使う；fromEnvironment
  "mypy-type-checker.importStrategy": "useBundled",
  // python.mypy-type-checker 実行パス
  "mypy-type-checker.path": ["${workspaceFolder}/.venv/bin/mypy"],
  // python.mypy 有効無効
  "mypy.enabled": false,
  // python.mypy 実行パス
  "mypy.dmypyExecutable": "${workspaceFolder}/.venv/bin/dmypy",
  // ------------------------------------
  // Code Spell Checker
  // ------------------------------------
  "cSpell.ignorePaths": ["settings.json", ".vscode", "*.yml"],
  // キーワードをサジェストしない
  "editor.suggest.showKeywords": false,
  // テキストをサジェストしない
  "editor.suggest.showWords": false,
  // snippetのサジェストを最初に出す。
  "editor.snippetSuggestions": "top",
  // ------------------------------------
  // REST Client
  // ------------------------------------
  // 日本語がUnicodeで表示される対処
  "rest-client.decodeEscapedUnicodeCharacters": true,
  // 変数指定
  "rest-client.environmentVariables": {
    "$shared": {
      "version": "v1"
    },
    // ローカル環境
    "local": {
      "baseUrl": "http://localhost:2000/peppolreceive/api/v1/",
      "AUTH_API_ORIGIN": "http://localhost:8888",
      "AUTH_API_HEADER_IM_ES3_APP_ID": "app_id_1",
      "AUTH_API_HEADER_IM_ES3_SECRET": "app_sc_2",
      "AUTH_API_HEADER_IM_ES3_VERSION": "2024-02-15",
      "IM_ACCESS_POINT_ORIGIN": "http://localhost:8888"
    },
    // 開発環境
    "development": {
      "baseUrl": "https://peppol:!he78kt1jYZ@api.dev.ppol.imlab.cloud/peppolreceive/api/v1/",
      "AUTH_API_ORIGIN": "http://ec2-54-64-123-118.ap-northeast-1.compute.amazonaws.com:8010",
      "AUTH_API_HEADER_IM_ES3_APP_ID": "app_id_1",
      "AUTH_API_HEADER_IM_ES3_SECRET": "app_sc_2",
      "AUTH_API_HEADER_IM_ES3_VERSION": "2024-02-15",
      "IM_ACCESS_POINT_ORIGIN": "http://ec2-54-64-123-118.ap-northeast-1.compute.amazonaws.com:8010"
    },
    // ステージング
    "staging": {
      "baseUrl": "https://peppol:!he78kt1jYZ@api.stg.ppol.imlab.cloud/peppolreceive/api/v1/",
      "AUTH_API_ORIGIN": "http://140.238.55.156:8080",
      "AUTH_API_HEADER_IM_ES3_APP_ID": "peppol-receive-system",
      "AUTH_API_HEADER_IM_ES3_SECRET": "4cf46c5b-4118-43b1-b883-fb8e8c53be65",
      "AUTH_API_HEADER_IM_ES3_VERSION": "2024-02-15",
      "IM_ACCESS_POINT_ORIGIN": "http://3.112.177.253:38080"
    },
    // 本番
    "production": {}
  }
}
